<!-- Modal -->
<div class="modal fade" id="addPeriodModal" tabindex="-1" role="dialog" aria-labelledby="addPeriodModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Period</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="addPeriodInput">Period Name</label>
          <input class="form-control" type="text" name="addPeriodInput" id="addPeriodInput">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" id="addPeriodButton" onclick="addPeriod()">Add</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="resetPeriodButton">Cancel</button>
      </div>
    </div>
  </div>
</div>
